<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/ll_item_thur_start"
    android:clickable="true"
    >
    <TextView
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="4dp"
        android:gravity="left|center_vertical"
        android:id="@+id/tv_item_thur_timestart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textAppearance="@anim/fade"
        android:textColor="@color/black"
        android:text="2017-3-6"/>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginBottom="2dp"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginTop="4dp"

    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="12dp">

        <FrameLayout
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_item_thur_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            >
            <LinearLayout
                android:id="@+id/ll_item_thur_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_item_thur_title"
                    style="@style/Base.TextAppearance.AppCompat.Headline"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:maxLines="1"
                    tools:text="标题测试效果" />

                <ImageView
                    android:layout_margin="5dp"
                    android:id="@+id/iv_item_thur_priority"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="right|center_vertical"
                    android:src="@drawable/ic_priority_blue" />

            </LinearLayout>


            <TextView
                android:id="@+id/tv_item_thur_content"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_item_thur_item"
                android:layout_marginTop="6dp"
                android:layout_weight="3"
                android:maxLines="2"
                android:textSize="16sp"
                tools:text="正文测试效果正文测试效果正文测测试效果" />

            <TextView
                android:id="@+id/tv_item_thur_time"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/tv_item_content"
                android:layout_marginRight="5dp"
                android:gravity="right"
                android:textSize="16sp"
                tools:text="2017_21" />
        </RelativeLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_task_thur_mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/iv_mask_task_item"
        android:orientation="horizontal"
        android:visibility="invisible">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_finished" />

    </LinearLayout>

</android.support.v7.widget.CardView>
</LinearLayout>
